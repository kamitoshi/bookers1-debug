<p id="notice"><%= notice %></p>

<h1>Books</h1>

<% if @books.blank? %>
  <p>投稿がまだありません</p>
<% else %>
  <table>
    <thead>
      <tr>
        <th class="content-title">Title</th>
        <th class="content-body">Body</th>
        <th class="show"></th>
        <th class="edit"></th>
        <th class="destroy"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="content-title"><%= book.title %></td>
        <td class="content-body"><%= book.body %></td>
        <td class="show"><%= link_to "Show", book_path(book) %></td>
        <td class="edit"><%= link_to "Edit", edit_book_path(book) %></td>
        <td class="destroy"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<h2>New book</h2>
<%= render 'form'%>
